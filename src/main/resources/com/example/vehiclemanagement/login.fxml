<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.vehiclemanagement.LoginController"
      alignment="CENTER" spacing="15" prefWidth="300" prefHeight="400"
      style="-fx-background-color: #faf7fe;">

    <!-- Animated Background Elements -->
    <children>
        <Circle fx:id="floatingCircle1" fill="radial-gradient(focus-angle 45deg, focus-distance 20%, center 50% 50%, radius 50%, #e6f8f9 0%, #b8c6fb 100%)"
                radius="40" opacity="0.6" layoutX="50" layoutY="100"/>
        <Circle fx:id="floatingCircle2" fill="radial-gradient(focus-angle 45deg, focus-distance 20%, center 50% 50%, radius 50%, #f0e6ff 0%, #d9c7ff 100%)"
                radius="30" opacity="0.6" layoutX="250" layoutY="300"/>
    </children>

    <!-- Title with subtle animation -->
    <Label text="Drive Your Dream - Mohapi Car Rentals"
           style="-fx-text-fill: #7e6bff; -fx-font-size: 16px; -fx-font-weight: bold;"
           fx:id="titleLabel">
        <effect>
            <DropShadow color="#d9c7ff" radius="10" spread="0.3"/>
        </effect>
    </Label>

    <!-- Form Container with floating effect -->
    <VBox fx:id="formBox" spacing="10" alignment="CENTER"
          style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: #e6e1ff; -fx-border-width: 1; -fx-border-radius: 15;"
          prefWidth="240">

        <!-- Username Field with focus animation -->
        <TextField fx:id="usernameField" promptText="Username"
                   style="-fx-background-color: white; -fx-border-color: #d9c7ff;
                          -fx-border-radius: 8; -fx-background-radius: 8;
                          -fx-font-size: 13px; -fx-padding: 7 12;
                          -fx-pref-width: 200px; -fx-effect: dropshadow(gaussian, rgba(216,198,255,0.3), 3, 0.2, 0, 1);"/>

        <!-- Password Field with focus animation -->
        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-color: white; -fx-border-color: #d9c7ff;
                             -fx-border-radius: 8; -fx-background-radius: 8;
                             -fx-font-size: 13px; -fx-padding: 7 12;
                             -fx-pref-width: 200px; -fx-effect: dropshadow(gaussian, rgba(216,198,255,0.3), 3, 0.2, 0, 1);"/>
    </VBox>

    <!-- Buttons Container -->
    <HBox spacing="15" alignment="CENTER">
        <!-- Login Button with hover animation -->
        <Button text="Login" onAction="#handleLoginAction"
                style="-fx-background-color: #7e6bff; -fx-text-fill: white;
                       -fx-font-size: 13px; -fx-background-radius: 8;
                       -fx-padding: 8 20; -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(126,107,255,0.4), 5, 0.2, 0, 1);"/>

        <!-- Sign Up Button with hover animation -->
        <Button text="Sign Up" onAction="#handleSignUpAction"
                style="-fx-background-color: #a5b4fc; -fx-text-fill: white;
                       -fx-font-size: 13px; -fx-background-radius: 8;
                       -fx-padding: 8 20; -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(165,180,252,0.4), 5, 0.2, 0, 1);"/>
    </HBox>
</VBox>