<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.vehiclemanagement.LoginController" prefWidth="600" prefHeight="500">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Vehicle Rental System" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2D2D2D; -fx-effect: dropshadow(gaussian, #A0A0A0, 10, 0, 2, 2);"/>

    <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 16px; -fx-pref-width: 250px; -fx-padding: 15px; -fx-background-color: #FFFFFF; -fx-border-radius: 25px; -fx-border-color: #E0E0E0; -fx-effect: dropshadow(gaussian, #B0B0B0, 10, 0, 2, 2);"/>

    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 16px; -fx-pref-width: 250px; -fx-padding: 15px; -fx-background-color: #FFFFFF; -fx-border-radius: 25px; -fx-border-color: #E0E0E0; -fx-effect: dropshadow(gaussian, #B0B0B0, 10, 0, 2, 2);"/>

    <Button text="Login" onAction="#handleLoginAction" style="-fx-font-size: 16px; -fx-pref-width: 250px; -fx-padding: 15px; -fx-background-color: linear-gradient(to right, #4CAF50, #45A049); -fx-text-fill: white; -fx-border-radius: 25px; -fx-effect: dropshadow(gaussian, #555555, 10, 0, 2, 2); -fx-cursor: hand;"/>

    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Don't have an account?" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
        <Button text="Sign Up" onAction="#handleSignUpAction" style="-fx-font-size: 16px; -fx-pref-width: 250px; -fx-padding: 15px; -fx-background-color: linear-gradient(to right, #2196F3, #1976D2); -fx-text-fill: white; -fx-border-radius: 25px; -fx-effect: dropshadow(gaussian, #555555, 10, 0, 2, 2); -fx-cursor: hand;"/>
    </HBox>

</VBox>
