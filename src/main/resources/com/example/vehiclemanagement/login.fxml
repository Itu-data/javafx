<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.vehiclemanagement.LoginController"
      alignment="CENTER" spacing="0"
      style="-fx-background-color: linear-gradient(to bottom, #fff0f6, #ffeef4);"
      prefWidth="450" prefHeight="700">

    <!-- Decorative header -->
    <StackPane style="-fx-background-color: linear-gradient(to bottom, #d14d72, #e6739f); -fx-padding: 40 0;">
        <VBox alignment="CENTER" spacing="5">
            <Label text="Welcome Back!"
                   style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Arial Rounded MT Bold';"/>
            <Label text="to Tasha's Luxury Rentals"
                   style="-fx-text-fill: #f9d5e5; -fx-font-size: 16px; -fx-font-style: italic;"/>
        </VBox>
    </StackPane>

    <!-- Main form container -->
    <StackPane style="-fx-padding: 0 40 40 40;">
        <VBox style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(209,77,114,0.1), 15, 0, 0, 5);"
              alignment="CENTER" spacing="25" prefWidth="350">

            <!-- Decorative circle -->
            <StackPane style="-fx-translate-y: -30;">
                <Circle radius="40" fill="#fdf2f7" stroke="#d14d72" strokeWidth="2"/>
                <Label text="✿" style="-fx-text-fill: #d14d72; -fx-font-size: 30px;"/>
            </StackPane>

            <VBox spacing="20" style="-fx-padding: 0 30 30 30;" alignment="CENTER" prefWidth="300">
                <!-- Username field -->
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #fdf2f7; -fx-background-radius: 10; -fx-padding: 5 15;">
                    <Label text="✿" style="-fx-text-fill: #d14d72; -fx-padding: 0 10 0 0;"/>
                    <TextField fx:id="usernameField" promptText="Your email or username"
                               style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 10 5; -fx-font-size: 14px;"/>
                </HBox>

                <!-- Password field -->
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #fdf2f7; -fx-background-radius: 10; -fx-padding: 5 15;">
                    <Label text="✿" style="-fx-text-fill: #d14d72; -fx-padding: 0 10 0 0;"/>
                    <PasswordField fx:id="passwordField" promptText="Your password"
                                   style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 10 5; -fx-font-size: 14px;"/>
                </HBox>

                <!-- Remember me & forgot password -->
                <HBox alignment="CENTER" spacing="80">
                    <CheckBox text="Remember me"
                              style="-fx-text-fill: #a3816a; -fx-font-size: 13px;"/>
                    <Hyperlink text="Forgot password?"
                               style="-fx-text-fill: #d14d72; -fx-font-size: 13px; -fx-border-color: transparent;"/>
                </HBox>

                <!-- Login button -->
                <Button text="SIGN IN" onAction="#handleLoginAction"
                        style="-fx-background-color: linear-gradient(to right, #d14d72, #e6739f);
                             -fx-text-fill: white; -fx-font-weight: bold;
                             -fx-font-size: 15px; -fx-background-radius: 25;
                             -fx-pref-width: 200; -fx-pref-height: 45;"/>

                <!-- Divider -->
                <HBox alignment="CENTER" spacing="10">
                    <Line endX="80" style="-fx-stroke: #f2d7d7;"/>
                    <Label text="or" style="-fx-text-fill: #c4a6b2; -fx-font-size: 12px;"/>
                    <Line endX="80" style="-fx-stroke: #f2d7d7;"/>
                </HBox>

                <!-- Sign up prompt -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="New to Tasha's?" style="-fx-text-fill: #a3816a; -fx-font-size: 13px;"/>
                    <Hyperlink text="Create account" onAction="#handleSignUpAction"
                               style="-fx-text-fill: #d14d72; -fx-font-weight: bold; -fx-font-size: 13px; -fx-border-color: transparent;"/>
                </HBox>
            </VBox>
        </VBox>
    </StackPane>

    <!-- Footer -->
    <Label text="© 2023 Tasha's Luxury Rentals. All rights reserved."
           style="-fx-text-fill: #a3816a; -fx-font-size: 11px; -fx-padding: 20 0;"/>
</VBox>