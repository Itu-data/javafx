<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vehiclemanagement.AddvehicleManagement"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: #fef6f9;">

    <VBox spacing="15" alignment="CENTER"
          layoutX="100" layoutY="50"
          style="-fx-background-color: #fff0f6; -fx-padding: 30px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <!-- Title -->
        <Label text="Add New Vehicle"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #d63384;"/>

        <!-- Brand -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Brand:"
                   style="-fx-font-size: 16px; -fx-text-fill: #6c3483; -fx-pref-width: 160px;"/>
            <TextField fx:id="brandField" promptText="Enter brand name"
                       style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 10px;"/>
        </HBox>

        <!-- Model -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Model:"
                   style="-fx-font-size: 16px; -fx-text-fill: #6c3483; -fx-pref-width: 160px;"/>
            <TextField fx:id="modelField" promptText="Enter model name"
                       style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 10px;"/>
        </HBox>

        <!-- Category -->
        <!-- Category -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Category:"
                   style="-fx-font-size: 16px; -fx-text-fill: #6c3483; -fx-pref-width: 160px;"/>
            <ComboBox fx:id="categoryField" promptText="Select category"
                      style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 10px;"/>
        </HBox>


        <!-- Rental Price -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rental Price per Day:"
                   style="-fx-font-size: 16px; -fx-text-fill: #6c3483; -fx-pref-width: 160px;"/>
            <TextField fx:id="rentalPriceField" promptText="Enter price"
                       style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 10px;"/>
        </HBox>

        <!-- Availability Status -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Availability Status:"
                   style="-fx-font-size: 16px; -fx-text-fill: #6c3483; -fx-pref-width: 160px;"/>
            <ComboBox fx:id="availabilityField" promptText="Select status"
                      style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 10px;"/>
        </HBox>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10px;">
            <Button text="Add Vehicle" onAction="#handleAddVehicleForm"
                    style="-fx-background-color: #d63384; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12px; -fx-padding: 10 25;"/>
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #f1948a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12px; -fx-padding: 10 25;"/>
        </HBox>

    </VBox>

</AnchorPane>
