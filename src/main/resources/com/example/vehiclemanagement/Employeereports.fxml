<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vehiclemanagement.EmployeeReportsController" prefWidth="800" prefHeight="700">

    <!-- Top Title -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Label text="Employee Reports" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center Table -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 30;">
            <TableView fx:id="employeeReportTable" prefWidth="800" prefHeight="400" style="-fx-font-size: 14px;">

                <TableView fx:id="paymentReportTable" prefWidth="800" prefHeight="400" style="-fx-font-size: 14px;">
                    <columns>
                        <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="150"/>
                        <TableColumn fx:id="vehicleNameColumn" text="Vehicle Name" prefWidth="150"/>
                        <TableColumn fx:id="amountPaidColumn" text="Amount Paid" prefWidth="100"/>
                        <TableColumn fx:id="paymentDateColumn" text="Payment Date" prefWidth="150"/>
                        <TableColumn fx:id="paymentMethodColumn" text="Payment Method" prefWidth="150"/>
                    </columns>
                </TableView>


            </TableView>

            <Button text="Export Report" onAction="#handleExportReport"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px; -fx-padding: 10 20;"/>
        </VBox>
    </center>

    <!-- Bottom Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label text="Â© 2025 Mohapi Car Rentals. All rights reserved." style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
