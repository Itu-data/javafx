<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vehiclemanagement.VehicleManagementController" prefWidth="800" prefHeight="700">

    <!-- Header Section -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label fx:id="welcomeLabel" text="Drive Your Dream - Mohapi Car Rentals!"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="🚪 Logout" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 20px;"/>
        </HBox>
    </top>

    <!-- Sidebar Section -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Button text="👤 Manage Profile" onAction="#handleManageProfile"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"
                    onMouseEntered="#hoverButton" onMouseExited="#exitButton"/>

            <Button text="🚗 Vehicles" onAction="#handleVehicles"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"
                    onMouseEntered="#hoverButton" onMouseExited="#exitButton"/>

            <Button text="🧑‍🤝‍🧑 Customers" onAction="#handleCustomers"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"
                    onMouseEntered="#hoverButton" onMouseExited="#exitButton"/>

            <Button text="💳 Payments" onAction="#handlePayments"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"
                    onMouseEntered="#hoverButton" onMouseExited="#exitButton"/>

            <Button text="📈 Reports" onAction="#handleReports"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"
                    onMouseEntered="#hoverButton" onMouseExited="#exitButton"/>
        </VBox>
    </left>




        <!-- Top Title -->
        <top>
            <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 20;">
                <Label text="Vehicle Management Dashboard" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>
            </HBox>
        </top>

        <!-- Main Content Section (Center) -->
        <center>
            <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 30;">

                <!-- Vehicle Table -->
                <TableView fx:id="vehicleTable" prefWidth="800" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="vehicleIdCol" text="Vehicle ID" prefWidth="100"/>
                        <TableColumn fx:id="brandCol" text="Brand" prefWidth="150"/>
                        <TableColumn fx:id="modelCol" text="Model" prefWidth="150"/>
                        <TableColumn fx:id="categoryCol" text="Category" prefWidth="150"/>
                        <TableColumn fx:id="rentalPriceCol" text="Rental Price per Day" prefWidth="150"/>
                        <TableColumn fx:id="availabilityCol" text="Availability" prefWidth="150"/>
                    </columns>
                </TableView>

                <!-- Buttons for Vehicle Management Actions -->
                <HBox spacing="20" alignment="CENTER">
                    <Button text="Add Vehicle" onAction="#handleAddVehicle" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px; -fx-padding: 10 20;"/>
                    <Button text="Update Vehicle" onAction="#handleUpdateVehicle" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px; -fx-padding: 10 20;"/>
                    <Button text="Delete Vehicle" onAction="#handleDeleteVehicle" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px; -fx-padding: 10 20;"/>
                </HBox>
            </VBox>
        </center>
    <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
        <Label text="© 2025 Mohapi Car Rentals. All rights reserved."
               style="-fx-text-fill: white; -fx-font-size: 12px;"/>
    </HBox>
    </BorderPane>








