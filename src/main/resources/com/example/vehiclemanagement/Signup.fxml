<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<?import javafx.scene.shape.Line?>
<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.vehiclemanagement.Signup"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #fff5f5, #fff0f6);"
      prefWidth="420"
      prefHeight="650">

    <padding>
        <Insets top="40" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Header with decorative elements -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Create Your Account"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #d14d72; -fx-font-family: 'Arial Rounded MT Bold';"/>
        <Label text="Begin your beautiful journey with us"
               style="-fx-text-fill: #a3816a; -fx-font-size: 13px; -fx-font-style: italic;"/>
    </VBox>

    <!-- Form Container with soft shadow -->
    <VBox spacing="18" style="-fx-padding: 25px; -fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(209,77,114,0.1), 10, 0.2, 0, 3);">
        <!-- Username Field -->
        <TextField fx:id="usernameField"
                   promptText="Your username"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #f9d5e5; -fx-pref-height: 42; -fx-font-size: 14px; -fx-prompt-text-fill: #c4a6b2; -fx-background-insets: 0; -fx-padding: 0 15px;"/>

        <!-- Email Field -->
        <TextField fx:id="emailField"
                   promptText="Your email"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #f9d5e5; -fx-pref-height: 42; -fx-font-size: 14px; -fx-prompt-text-fill: #c4a6b2; -fx-background-insets: 0; -fx-padding: 0 15px;"/>

        <!-- Password Field -->
        <PasswordField fx:id="passwordField"
                       promptText="Create password"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #f9d5e5; -fx-pref-height: 42; -fx-font-size: 14px; -fx-prompt-text-fill: #c4a6b2; -fx-background-insets: 0; -fx-padding: 0 15px;"/>

        <!-- Confirm Password Field -->
        <PasswordField fx:id="confirmPasswordField"
                       promptText="Confirm password"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #f9d5e5; -fx-pref-height: 42; -fx-font-size: 14px; -fx-prompt-text-fill: #c4a6b2; -fx-background-insets: 0; -fx-padding: 0 15px;"/>

        <!-- Role Selection -->
        <ComboBox fx:id="roleComboBox"
                  promptText="Select your role"
                  style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #f9d5e5; -fx-pref-height: 42; -fx-font-size: 14px; -fx-prompt-text-fill: #c4a6b2; -fx-background-color: white;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Administrator"/>
                    <String fx:value="Team Member"/>
                </FXCollections>
            </items>
        </ComboBox>
    </VBox>

    <!-- Buttons with feminine touch -->
    <VBox spacing="12" alignment="CENTER">
        <!-- Register Button -->
        <Button text="Join Now"
                onAction="#handleRegisterAction"
                style="-fx-background-color: linear-gradient(to right, #d14d72, #e6739f); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 220; -fx-pref-height: 42; -fx-background-radius: 21; -fx-effect: dropshadow(gaussian, rgba(209,77,114,0.3), 8, 0, 0, 2);"/>

        <!-- Divider -->
        <HBox alignment="CENTER" spacing="10">
            <Line endX="80" style="-fx-stroke: #f2d7d7;"/>
            <Label text="or" style="-fx-text-fill: #c4a6b2; -fx-font-size: 12px;"/>
            <Line endX="80" style="-fx-stroke: #f2d7d7;"/>
        </HBox>

        <!-- Login Button -->
        <Button text="Sign In Instead"
                onAction="#handleBackToLoginAction"
                style="-fx-background-color: transparent; -fx-text-fill: #d14d72; -fx-font-weight: bold; -fx-font-size: 13px; -fx-pref-width: 220; -fx-pref-height: 38; -fx-border-color: #f9d5e5; -fx-border-radius: 19; -fx-border-width: 2;"/>
    </VBox>

    <!-- Footer Text -->
    <Label text="By joining, you agree to our Terms and Privacy Policy"
           style="-fx-text-fill: #a3816a; -fx-font-size: 11px; -fx-wrap-text: true; -fx-alignment: center;"/>
</VBox>