<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.vehiclemanagement.Signup"
      prefWidth="800" prefHeight="600">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Create Account" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username" prefWidth="600"/>
    <TextField fx:id="emailField" promptText="Email" prefWidth="600"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="600"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="600"/>

    <ComboBox fx:id="roleComboBox" promptText="Choose Role" prefWidth="600">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Admin"/>
                <String fx:value="Employee"/>
            </FXCollections>
        </items>
    </ComboBox>

    <ImageView fitWidth="150" fitHeight="100" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../logo.jpg"/>
        </image>
    </ImageView>

    <!-- Buttons on the same row -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Register" onAction="#handleRegisterAction"
                prefWidth="290" prefHeight="45"
                style="-fx-background-color: linear-gradient(to right, #4CAF50, #2E7D32);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 14px;
                       -fx-background-radius: 20;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>

        <Button text="Back to Login" onAction="#handleBackToLoginAction"
                prefWidth="290" prefHeight="45"
                style="-fx-background-color: linear-gradient(to right, #2196F3, #1976D2);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 14px;
                       -fx-background-radius: 20;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    </HBox>

</VBox>
